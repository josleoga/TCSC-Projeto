#include <stdio.h>
#include <stdlib.h>
int main(void){
    
    double a=0, b=0, op, res;
    
    printf("Informe Numero A: ");
     scanf("%lf", &a);
    printf("Informe Numero B: ");
     scanf("%lf", &b);
     
    printf("\n\nEscolha uma das opcoes");
    printf("\n1:Somar \n2:Dividir \n3:Multiplicar \n4:Subtrair \n\n");
     scanf("%lf", &op);
    
    printf("\n\n");
    
    switch(op>0){
               case 1: res = a + b;
                    printf("Resultado da Soma eh: %0.0lf + %0.0lf = %0.2lf\n\n", a, b , res);
                    break;
               case 2: res = a / b;
                    printf("O valo da divisao :%0.2lf", res);
                    break;
                    
               case 3: if(a != 0 || b != 0){               
                        res = a * b;
                        print("O Resultado da multiplicacao eh: %0.1f", res);
                        }
                        else                        
                        printf(" Nao eh possivel dividir por 0!")                        
                        break;
               }
    
    system("Pause");
}
